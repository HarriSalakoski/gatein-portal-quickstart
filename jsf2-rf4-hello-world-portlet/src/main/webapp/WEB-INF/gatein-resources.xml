<gatein-resources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_resources_1_3 http://www.gatein.org/xml/ns/gatein_resources_1_3"
    xmlns="http://www.gatein.org/xml/ns/gatein_resources_1_3">

    <!-- Portal will load this CSS whenever jsf2HelloWorldPortlet is requested. -->
    <portlet-skin>
        <!-- 
            The name of the web application containing the portlet.xml file in which 
            jsf2Rf4HelloWorldPortlet is definded. The application name is usually 
            the same as the name of the WAR through which the application was deployed. 
        -->
        <application-name>jsf2-rf4-hello-world-portlet</application-name>
        <!-- <portlet-name> value from the portlet.xml referenced above -->
        <portlet-name>jsf2Rf4HelloWorldPortlet</portlet-name>
        <skin-name>Default</skin-name>
        <css-path>/skin/Default/jsf2-rf4-hello-world-portlet.css</css-path>
    </portlet-skin>

</gatein-resources>